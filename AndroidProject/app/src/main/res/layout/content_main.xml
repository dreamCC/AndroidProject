<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main"


    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"

    android:divider="#eb1e1e"
    android:showDividers="end"
    android:dividerPadding="0dp">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#426ab3"
        android:foreground="@drawable/wdjl"
        android:foregroundGravity="right|bottom">

        <View
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:background="#726930"
            />

        <View
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:background="#f05b72"/>

    </FrameLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <TextView
            android:id="@+id/centerView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#5f3c23"
            android:layout_centerInParent="true">
        </TextView>

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@+id/centerView"
            android:layout_alignTop="@+id/centerView"
            android:background="#ef5b9c"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#faa755"
            android:layout_above="@+id/centerView"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/centerView"
            android:background="#5c7a29"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#d2553d"
            android:layout_below="@+id/centerView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:background="#b7ba6b"
        android:collapseColumns=""
        android:layout_height="match_parent">

        <TableRow>
            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="#f58f98"
                android:text="TableLayout"
                android:textColor="#224b8f"
                android:textSize="20sp"
                android:lines="1"
                android:ellipsize="end"
                />

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="#f58f98"
                android:text="TableLayout"
                android:textColor="#224b8f"
                android:textSize="20sp"
                android:lines="1"
                android:ellipsize="end"
                />

        </TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="#69541b"
            android:layout_marginTop="10dp"
            android:text="国防色"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="#77ac98"
            android:text="千草色"
            android:gravity="center"
            />

    </TableLayout>





</LinearLayout>

