<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="#f8aba6"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="#5c7a29"
        app:layout_constraintTop_toBottomOf="@+id/tv_1"
        android:layout_marginTop="20dp"

        app:layout_constraintLeft_toLeftOf="@+id/tv_1"/>

    //barrier
    <android.support.constraint.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="right"
        app:constraint_referenced_ids="tv_1, tv_2"/>

    <TextView
        android:id="@+id/tv_3"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@+id/barrier"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="@+id/tv_1"
        android:background="#a7324a"
        />


    //gone的使用
    <TextView
        android:id="@+id/tv_4"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_1"
        android:background="#006c54"
        android:layout_marginTop="90dp"
        app:layout_goneMarginTop="200dp"
        />

    // group---统一隐藏
    <android.support.constraint.Group
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="tv_4, tv_3"
        android:visibility="visible"
       />

    // placehold，通过app:content = "" 来进行获取占位
    <android.support.constraint.Placeholder
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_4"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        />

    // guidLine
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="50dp"/>


</android.support.constraint.ConstraintLayout>