<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <Button
        android:id="@+id/system_ui"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="SystemUI"
        android:textAllCaps="false"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/view_group"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        app:layout_constraintTop_toBottomOf="@id/system_ui"
        android:text="ViewGroup"
        android:textAllCaps="false"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/system_knowledge"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        app:layout_constraintTop_toBottomOf="@id/view_group"
        android:text="SystemKnowledge"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        app:layout_constraintTop_toBottomOf="@id/system_knowledge"
        android:text="ListView"
        android:textSize="20sp"/>

</android.support.constraint.ConstraintLayout>